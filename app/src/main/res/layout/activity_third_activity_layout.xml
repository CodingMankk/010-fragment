<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_add_fragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add fragment1"/>

    <Button
        android:id="@+id/btn_add_fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add fragment2"/>


    <Button
        android:id="@+id/btn_remove_fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="remove fragment2"/>

    <Button
        android:id="@+id/btn_replace_fragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="replace fragment1"/>


    <FrameLayout
        android:id="@+id/fl_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    </FrameLayout>


</LinearLayout>